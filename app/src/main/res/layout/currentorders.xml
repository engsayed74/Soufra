<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/dimens_s"
        android:layout_height="@dimen/dimen_170">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/currentorder_img"
                android:layout_width="@dimen/album_dp_100"
                android:layout_height="@dimen/album_dp_100"
                android:layout_marginTop="@dimen/dimens_m"
                android:layout_marginStart="@dimen/dimens_m"
                android:layout_marginEnd="@dimen/dimens_m"
                 />
            <LinearLayout
                android:id="@+id/linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimens_m"
                android:layout_marginEnd="@dimen/dimens_m"
                android:layout_marginTop="@dimen/dimens_m"
                android:layout_toRightOf="@+id/currentorder_img"
                android:orientation="vertical"
                android:layout_toEndOf="@+id/currentorder_img">
                <TextView
                    android:id="@+id/currentorder_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/currentorder_name"
                    android:layout_marginTop="@dimen/dimens_s"/>
                <TextView
                    android:id="@+id/currentorder_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimens_s"
                    android:hint="@string/currentorder_price"/>
                <TextView
                    android:id="@+id/currentorder_delivery"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/dimens_s"
                    android:layout_height="wrap_content"
                    android:hint="@string/currentorder_delivery"/>
                <TextView
                    android:id="@+id/currentorder_totalcoast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimens_s"
                    android:hint="@string/currentorder_totalcoast"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens_xxl"
                android:layout_toRightOf="@id/linear_layout"

                android:orientation="vertical"
                android:layout_marginStart="@dimen/dimens_xxl"
                android:layout_toEndOf="@id/linear_layout">
                <TextView
                    android:id="@+id/currentorder_ordernumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/currentorder_ordernum"
                    android:layout_marginTop="@dimen/dimens_xxxxl"/>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/dimens_m"
               android:orientation="horizontal">

               <Button
                   android:id="@+id/currentorder_reject"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/currentorder_receive"
                   android:background="@color/green"
                   android:textColor="@color/colorwhite"
                   android:textSize="@dimen/dimens_l"/>
               <Button
                   android:id="@+id/currentorder_receive"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/currentorder_rejection"
                   android:background="@color/red"
                   android:layout_marginRight="@dimen/dimens_s"
                   android:layout_marginLeft="@dimen/dimens_s"
                   android:textColor="@color/colorwhite"
                   android:textSize="@dimen/txt_size_l"/>


           </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>