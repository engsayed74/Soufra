<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/colorwhite"
        android:layout_height="@dimen/dimen_200"
        app:cardCornerRadius="@dimen/dimen_1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/myproducts_img"
                android:layout_width="@dimen/dimen_100"
                android:layout_height="@dimen/dimen_100"
                android:layout_marginStart="@dimen/dimens_m"
                android:layout_marginTop="@dimen/dimens_xxl"
                android:layout_marginEnd="@dimen/dimens_m" />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:id="@+id/layout_2"
                android:layout_toEndOf="@+id/myproducts_img"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/myproducts_img">

                <TextView
                    android:id="@+id/myproducts_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimens_xxl"
                    android:layout_gravity="center"
                    android:text="@string/menu_sandwishname"
                    android:textSize="@dimen/txt_size_m"
                    android:textStyle="bold" />

                <TextView
                    android:layout_marginRight="@dimen/dimens_m"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/menu_description"
                    android:id="@+id/myproducts_description"
                    android:layout_marginTop="@dimen/dimens_m"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/layout_2"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dimens_xxl"
                android:layout_marginStart="@dimen/dimens_m"
                android:layout_marginEnd="@dimen/dimens_m"
                android:layout_toRightOf="@id/layout_2">

                <TextView
                    android:id="@+id/myproducts_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="end"
                    android:paddingLeft="@dimen/dimens_m"
                    android:text="@string/menu_salary"
                    android:textColor="@color/green"
                    android:textStyle="bold" />


            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>